                        variants={{
                            initial: { x: -20, opacity: 0 },
                            animate: { x: 0, opacity: 1, transition: studioTransition }
                        }}
                    >
                        [ 01 — BIO ]
                    </motion.div>
                </div>

                {/* Editorial Text */}
                <div className="md:col-span-8 md:col-start-5">
