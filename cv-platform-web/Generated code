                initial: { opacity: 0 },
                animate: { opacity: 1, transition: { staggerChildren: 0.15 } }
            }}
        >
            <div className="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-4">
                {/* Sticky Label */}
