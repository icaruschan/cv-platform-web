    / src / components / Hero.tsx
import { motion, useScroll, useTransform } from 'framer-motion';
import { useEffect, useState } from 'react';

const studioTransition = {
    type: "spring",
    stiffness: 70,
    damping: 20,
    mass: 1
};

const container = {
    initial: { opacity: 0 },
    animate: {
        opacity: 1,
        transition: { staggerChildren: 0.15 }
    }
};

const item = {
    initial: { y: "100%" },
    animate: {
        y: "0%",
        transition: studioTransition
    }
};

export default function Hero() {
    const [time, setTime] = useState(new Date());
    const { scrollY } = useScroll();
    const y = useTransform(scrollY, [0, 500], [0, 150]);

    useEffect(() => {
        const timer = setInterval(() => setTime(new Date()), 1000);
        return () => clearInterval(timer);
    }, []);

    const formatTime = (date: Date) => {
        return date.toLocaleTimeString('en-US', {
            hour: '2-digit',
            minute: '2-digit',
            timeZoneName: 'short'
        });
    };

    return (
        <motion.section
            className="relative min-h-screen flex flex-col justify-between px-4 py-6 md:p-8 overflow-hidden"
            initial="initial"
            animate="animate"
            variants={container}
        >
            {/* Top Metadata Bar */}
            <div className="flex justify-between items-start w-full font-mono text-xs md:text-sm tracking-tight text-secondary uppercase">
                <div className="flex flex-col gap-1">
                    <motion.span variants={item} className="block overflow-hidden">
                        [ {formatTime(time)} ]
                    </motion.span>
                    <motion.span variants={item} className="block overflow-hidden">
                        [ LOC: REMOTE ]
                    </motion.span>
                </div>
                <div className="text-right">
                    <motion.span variants={item} className="block overflow-hidden">
                        [ STATUS: ONLINE ]
                    </motion.span>
                    <motion.span variants={item} className="block overflow-hidden text-green-600">
                        ● AVAILABLE FOR NEW PARTNERSHIPS
                    </motion.span>
                </div>
            </div>

            {/* Main Content */}
            <div className="flex-1 flex flex-col justify-center relative z-10">
                <motion.div style={{ y }} className="w-full">
                    {/* Asymmetric Layout */}
                    <div className="grid grid-cols-12 gap-4 mb-8">
                        <div className="col-span-12 md:col-span-8 md:col-start-5">
                            <div className="overflow-hidden">
                                <motion.p
                                    variants={item}
                                    className="font-mono text-sm md:text-base mb-2 text-secondary"
                                >
                  // OUTREACH SPECIALIST
                                </motion.p>
                            </div>
                            <div className="overflow-hidden">
                                <motion.h2
                                    variants={item}
                                    className="text-xl md:text-3xl font-heading leading-tight max-w-2xl"
                                >
                                    I connect brands and projects together leading to sustainable partnerships.
                                </motion.h2>
                            </div>
                        </div>
                    </div>

                    {/* Massive Display Text */}
                    <div className="overflow-hidden border-t border-black/10 pt-4">
                        <motion.h1
                            variants={item}
                            className="font-heading font-bold text-display text-primary uppercase leading-none tracking-tighter"
                        >
                            Fortune
                        </motion.h1>
                    </div>
                </motion.div>
            </div>

            {/* Bottom Anchor */}
            <div className="w-full flex justify-between items-end font-mono text-xs md:text-sm text-secondary border-t border-black/10 pt-4">
                <motion.span variants={item}>[ SCROLL TO EXPLORE ]</motion.span>
                <motion.span variants={item}>[ V1.0.4 ]</motion.span>
            </div>
        </motion.section>
    );
}
